@prefix ex:<http://example.com/ns#>.
@prefix sh:<http://www.w3.org/ns/shacl#>.
@prefix xsd:<http://www.w3.org/2001/XMLSchema#>

    ex:PersonShape
    	a sh:NodeShape ;
    	sh:targetClass ex:Person ;
    	sh:property [
    		sh:path ex:ssn ;
    		sh:maxCount 1 ;
    		sh:datatype xsd:string ;
    	] ;
    	sh:property [
    		sh:path ex:worksFor ;
    		sh:class ex:Company ;
    		sh:nodeKind sh:IRI ;
    	] ;
    	sh:property [
    	    sh:path ex:gender ;
    	    sh:in (ex:Male ex:Female)
    	] .